<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.reflectionsinfos</groupId>
  <artifactId>class_fix</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>sonar-plugin</packaging>

  <name>Parameter checker class fix</name>
  <description>Scan for the parameters and find the functions with too many parameters</description>

  <url>http://maven.apache.org</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <sonar.api.version>9.14.0.375</sonar.api.version>
    <sonar.python.version>3.24.1.11916</sonar.python.version>
    <sonar.testing.harness.version>9.5.0.56709</sonar.testing.harness.version>
    <sonar.junit.version>4.13.2</sonar.junit.version>
    <sonar.assertj.version>3.19.0</sonar.assertj.version>
    <sonar.mockito.version>4.6.1</sonar.mockito.version>
    <sonar.plugin.packaging.version>1.23.0.740</sonar.plugin.packaging.version>
    <sonar.mojo.version>2.0.1</sonar.mojo.version>
  </properties>

